<UserControl x:Class="VoleyballWpf3.Views.AddTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoleyballWpf3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid Background="White">
        <StackPanel>
            <Label Content="Название команды" Width="300" Margin="2"/>
            <TextBox x:Name="TitleTextBox" Width="300" Margin="2" />
            <Label Content="Победы" Width="300" Margin="2"/>
            <TextBox x:Name="WinsTextBox" Width="300" Margin="2"/>
            <Label Content="Поражения" Width="300" Margin="2"/>
            <TextBox x:Name="LossesTextBox" Width="300" Margin="2"/>
            <Button Content="Добавить команду" Width="300" Margin="2" Command="{Binding AddTeamCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
